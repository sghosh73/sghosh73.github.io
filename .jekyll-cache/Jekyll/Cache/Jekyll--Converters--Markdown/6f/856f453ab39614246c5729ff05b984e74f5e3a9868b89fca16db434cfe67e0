<script>
document.addEventListener('DOMContentLoaded', function() {
  console.log('Publications script loaded');
  
  // Wait a bit for Jekyll Scholar to render
  setTimeout(function() {
    // Find all bibliography entries - try different selectors
    const bibliographyEntries = document.querySelectorAll('.bibliography li, .bibliography > li, ol.bibliography li');
    console.log('Found bibliography entries:', bibliographyEntries.length);
    
    if (bibliographyEntries.length === 0) {
      // Try alternative selectors
      const altEntries = document.querySelectorAll('li, .row');
      console.log('Trying alternative selectors, found:', altEntries.length);
    }
    
    bibliographyEntries.forEach((entry, index) => {
      console.log('Processing entry', index, entry);
      
      // Look for the actual content blocks (divs with abstract/bibtex classes)
      const abstractContent = entry.querySelector('div.abstract');
      const bibtexContent = entry.querySelector('div.bibtex');
      
      // Also look for the button links
      const abstractBtn = entry.querySelector('a.abstract');
      const bibtexBtn = entry.querySelector('a.bibtex');
      
      console.log('Abstract content found:', !!abstractContent, 'BibTeX content found:', !!bibtexContent);
      console.log('Abstract button found:', !!abstractBtn, 'BibTeX button found:', !!bibtexBtn);
      
      // Hide content blocks by default
      if (abstractContent) {
        abstractContent.style.display = 'none';
        abstractContent.id = `abstract-content-${index}`;
        console.log('Hiding abstract content');
      }
      
      if (bibtexContent) {
        bibtexContent.style.display = 'none';
        bibtexContent.id = `bibtex-content-${index}`;
        console.log('Hiding bibtex content');
      }
      
      // Add click handlers to existing buttons
      if (abstractBtn && abstractContent) {
        console.log('Adding abstract button handler');
        // Remove any existing listeners first
        abstractBtn.replaceWith(abstractBtn.cloneNode(true));
        const newAbstractBtn = entry.querySelector('a.abstract');
        
        newAbstractBtn.addEventListener('click', function(e) {
          e.preventDefault();
          e.stopPropagation();
          console.log('Abstract button clicked, current display:', abstractContent.style.display);
          
          if (abstractContent.style.display === 'none' || abstractContent.style.display === '') {
            abstractContent.style.display = 'block';
            this.textContent = 'Hide Abstract';
            this.classList.add('active');
            console.log('Showing abstract');
          } else {
            abstractContent.style.display = 'none';
            this.textContent = 'Abstract';
            this.classList.remove('active');
            console.log('Hiding abstract');
          }
        });
      }
      
      if (bibtexBtn && bibtexContent) {
        console.log('Adding bibtex button handler');
        // Remove any existing listeners first
        bibtexBtn.replaceWith(bibtexBtn.cloneNode(true));
        const newBibtexBtn = entry.querySelector('a.bibtex');
        
        newBibtexBtn.addEventListener('click', function(e) {
          e.preventDefault();
          e.stopPropagation();
          console.log('BibTeX button clicked, current display:', bibtexContent.style.display);
          
          if (bibtexContent.style.display === 'none' || bibtexContent.style.display === '') {
            bibtexContent.style.display = 'block';
            this.textContent = 'Hide BibTeX';
            this.classList.add('active');
            console.log('Showing bibtex');
          } else {
            bibtexContent.style.display = 'none';
            this.textContent = 'BibTeX';
            this.classList.remove('active');
            console.log('Hiding bibtex');
          }
        });
      }
    });
  }, 2000); // Wait 2 seconds for Jekyll Scholar to render
});
</script>

