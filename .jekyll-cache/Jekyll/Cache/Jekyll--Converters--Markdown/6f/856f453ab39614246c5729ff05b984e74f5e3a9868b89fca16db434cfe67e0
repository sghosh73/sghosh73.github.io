  <span class="na">author</span> <span class="p">=</span> <span class="s">{Ghosh, Sayan and Warraich, Shahzaib Saqib and Tarsadiya, Dhruv and Yauney, Gregory and Swayamdipta, Swabha}</span><span class="p">,</span>
  <span class="na">journal</span> <span class="p">=</span> <span class="s">{arXiv preprint arXiv:2510.03527}</span><span class="p">,</span>
  <span class="na">year</span> <span class="p">=</span> <span class="s">{2025}</span><span class="p">,</span>
